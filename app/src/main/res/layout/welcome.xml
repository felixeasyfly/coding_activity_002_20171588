<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/textView_welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="34dp"
        android:layout_marginEnd="164dp"
        android:layout_marginRight="164dp"
        android:text="Welcome to"
        android:textSize="36sp"
        android:visibility="visible"
        android:textColor="@color/colorPureblack"/>

    <TextView
        android:id="@+id/textView_takepartin"
        android:layout_width="321dp"
        android:layout_height="72dp"
        android:layout_below="@id/textView_welcome"
        android:layout_alignLeft="@id/textView_welcome"
        android:text="TAKE PART IN OUR SURVEY!"
        android:textColor="@color/colorPureblack"
        android:textSize="20sp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/textView_Warnings"
        android:layout_width="324dp"
        android:layout_height="83dp"
        android:layout_below="@id/textView_takepartin"
        android:layout_alignLeft="@id/textView_takepartin"
        android:text="Before we start,here are things you should know:"

        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView_honest"
        android:layout_width="323dp"
        android:layout_height="47dp"
        android:layout_below="@id/textView_Warnings"
        android:layout_alignLeft="@id/textView_Warnings"
        android:text="- Please be honest when making your choice."
        android:textSize="15sp" />

    <TextView
        android:id="@+id/textView_fake"
        android:layout_width="323dp"
        android:layout_height="59dp"
        android:layout_below="@id/textView_honest"
        android:layout_alignLeft="@id/textView_honest"
        android:text="- We are just doing a reasearch so you don't have to fake your information."
        android:textSize="15sp" />

    <TextView
        android:id="@+id/textView_follow"
        android:layout_width="315dp"
        android:layout_height="92dp"
        android:layout_below="@id/textView_fake"
        android:layout_alignLeft="@id/textView_fake"
        android:text="- Please follow the steps we designed for you and don't skip any questions."
        android:textSize="15sp" />

    <CheckBox
        android:id="@+id/checkBox_accept"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView_follow"
        android:layout_centerHorizontal="true"
        android:text="I accept these requests"
        android:textSize="15sp"/>

    <Button
        android:id="@+id/button_Start"
        android:layout_width="317dp"
            android:layout_height="65dp"
        android:layout_below="@id/checkBox_accept"
        android:layout_centerHorizontal="true"
        android:text="LET'S START!"
        android:background="@color/colorPrimary"
        android:onClick="WelcomeStart">
    </Button>
</RelativeLayout>