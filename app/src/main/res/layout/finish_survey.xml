<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView_finish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="34dp"
        android:layout_marginEnd="164dp"
        android:layout_marginRight="164dp"
        android:text="THANK YOU"
        android:textSize="36sp"
        android:visibility="visible"
        android:textColor="@color/colorPureblack"/>

    <TextView
        android:id="@+id/textView_takepartin"
        android:layout_width="321dp"
        android:layout_height="72dp"
        android:layout_below="@id/textView_finish"
        android:layout_alignLeft="@id/textView_finish"
        android:text="FOR YOUR ANSWERS!"
        android:textColor="@color/colorPureblack"
        android:textSize="20sp"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/imageView_girl"
        android:layout_width="261dp"
        android:layout_height="280dp"
        android:layout_below="@id/textView_takepartin"
        android:layout_centerHorizontal="true"
        android:background="@mipmap/img_1" />
    <Button
        android:id="@+id/btn_Finish"
        android:layout_width="317dp"
        android:layout_height="65dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/imageView_girl"
        android:background="@color/colorPrimary"
        android:onClick="exit"
        android:text="FINISH" />
</RelativeLayout>
