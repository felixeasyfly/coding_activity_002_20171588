<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView_Q10"
        android:layout_width="match_parent"
        android:layout_height="84dp"
        android:text="  Question 10"
        android:textSize="36sp"
        android:textColor="@color/colorPureblack" />

    <TextView
        android:id="@+id/textView_age"
        android:layout_width="match_parent"
        android:layout_height="112dp"
        android:text="How old are you?"
        android:textAlignment="center"
        android:textSize="20sp"/>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RadioButton
            android:id="@+id/radioBtn_u18"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Under 18" />

        <RadioButton
            android:id="@+id/radioBtn_19_25"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="19-25" />

        <RadioButton
            android:id="@+id/radioBtn_25_35"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="25-35" />

        <RadioButton
            android:id="@+id/radioBtn_b35"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Beyond 35" />

        <TextView
            android:id="@+id/textView_blank10"
            android:layout_width="match_parent"
            android:layout_height="32dp" />

        <Button
            android:id="@+id/btn_Q10"
            android:layout_width="317dp"
            android:layout_height="65dp"
            android:layout_gravity="center"
            android:background="@color/colorPrimary"
            android:onClick="NEXTBTNCLK_Q10"
            android:text="NEXT" />
    </RadioGroup>

</LinearLayout>
