<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView_Q8"
        android:layout_width="match_parent"
        android:layout_height="84dp"
        android:text="  Question 8"
        android:textSize="36sp"
        android:textColor="@color/colorPureblack" />

    <TextView
        android:id="@+id/textView_choose"
        android:layout_width="match_parent"
        android:layout_height="112dp"
        android:text="Which brand of phone will you \n choose if you are going to buy a \n new one ?"
        android:textAlignment="center"
        android:textSize="20sp"/>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RadioButton
            android:id="@+id/radioBtn_IPhone2"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="IPhone" />

        <RadioButton
            android:id="@+id/radioBtn_Nokia2"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Nokia" />

        <RadioButton
            android:id="@+id/radioBtn_Samsung2"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Samsung" />

        <RadioButton
            android:id="@+id/radioBtn_MI2"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="MI" />

        <RadioButton
            android:id="@+id/radioBtn_Lenovo2"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Lenovo" />

        <RadioButton
            android:id="@+id/radioBtn_Sony2"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Sony" />

        <RadioButton
            android:id="@+id/radioBtn_Others2"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Others" />

        <TextView
            android:id="@+id/textView_blank8"
            android:layout_width="match_parent"
            android:layout_height="32dp" />

        <Button
            android:id="@+id/btn_Q8"
            android:layout_width="317dp"
            android:layout_height="65dp"
            android:layout_gravity="center"
            android:background="@color/colorPrimary"
            android:onClick="NEXTBTNCLK_Q8"
            android:text="NEXT" />

    </RadioGroup>

</LinearLayout>
